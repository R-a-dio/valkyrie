                <div class="field is-flex is-fullwidth"><div class="control is-flex is-fullwidth">
                    <input hx-get="/v1/search" hx-trigger="keyup changed delay:500ms" hx-target="#search-bar" class="input" type="text" name="q" placeholder="Request Song" role="search">
                </div></div>
